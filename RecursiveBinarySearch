#include<stdio.h>
#include<time.h>
#include<stdlib.h>
int RecursiveBin(int arr[], int beg, int end, int ele){
   
    if(end>=beg){
        int mid = beg + (end-beg)/2;
        if(arr[mid]==ele){
            return mid;
        }
        if(arr[mid]>ele)
            return RecursiveBin(arr,beg,mid-1,ele);
        return RecursiveBin(arr,mid+1,end,ele);
    }
    return -1;
}
int main(){
    double time_spent = 0.0;
    clock_t begin = clock();
   
   
   
    int n = 100;
    int arr[n];
    for(int i=0;i<n;i++){
        arr[i]=i;
    }
    int ele =45;
    int last = sizeof(arr)/sizeof(int);
    //printf("Size of array :%d \n\n",end);
    int pos = RecursiveBin(arr,0,last,ele);
    printf(" Element found at position %d", pos);
   
    clock_t end = clock();
    time_spent += (double)(end - begin) / CLOCKS_PER_SEC;
    printf("\n\n\n\nThe elapsed time is %f seconds", time_spent);
}
